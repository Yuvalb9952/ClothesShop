<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/logo.png">
    <title>@ViewData["Title"] ClothesShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cart.css" />
    <link rel="stylesheet" href="~/css/shop.css" />
    <link rel="stylesheet" href="~/css/checkout.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/orders.css" />
    <link rel="stylesheet" href="~/css/root.css" />
    <link rel="stylesheet" href="~/css/signin.css" />
    <link rel="stylesheet" href="~/css/home-page.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/map.js" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body class="bg-secondary">
    <div class="d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="">
                <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                ClothesShop
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
                <div class="float-right d-flex">
                    <a class="btn btn-sm btn-dark" asp-area="" asp-controller="Cart" asp-action="Cart">
                        <i class="bi bi-cart3" style="font-size:24px"></i>
                        <span class='badge badge-warning' id='lblCartCount'> @ViewBag.CartSize</span>
                    </a>
                </div>
            </div>
        </nav>
        <main class="container flex-fill" role="main">
            @RenderBody()
        </main>
        <footer class="footer text-white bg-dark d-flex justify-content-sm-between pl-3 pr-3">
            <div>
                &copy; 2021 - Project made by Adi Papismedov, Yuval Ben Amram, Eden Avretz & Tal Shemesh
            </div>
            <a class="btn btn-sm btn-dark pt-2" asp-area="" asp-controller="Authentication" asp-action="SignIn">
                <i class="bi bi-person-circle" style="font-size:24px"></i>
            </a>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

    </div>
</body>
</html>
