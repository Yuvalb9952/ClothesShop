<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/logo.png">
    <title>@ViewData["Title"] - ClothesShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/carousel.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="bg-secondary">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                ClothesShop
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li>
                        <a class="nav-link" href="#">Shop</a>
                    </li>
                    <li>
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li>
                    <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <div class="float-right d-flex">
                    <a class="btn btn-sm btn-dark" href="#">
                        <i class="bi bi-cart3" style="font-size:24px"></i>
                        <span class='badge badge-warning' id='lblCartCount'> 5 </span>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted bg-dark">
        <div class="float-left container text-white">
            &copy; 2021 - Project made by Adi Papismedov, Yuval Ben Amram, Eden Avretz & Tal Shemesh
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
