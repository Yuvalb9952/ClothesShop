<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/logo.png">
    <title>@ViewData["Title"] - ClothesShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cart.css" />
    <link rel="stylesheet" href="~/css/shop.css" />
    <link rel="stylesheet" href="~/css/checkout.css" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/orders.css" />
    <link rel="stylesheet" href="~/css/root.css" />
    <link rel="stylesheet" href="~/css/signin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body class="bg-secondary">
    <div class="d-flex flex-column min-vh-100">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="">
                    <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    ClothesShop
                </a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                    <div class="float-right d-flex">
                        <a id="fb-share-button" class="m-2" asp-controller="Admin" asp-action="FacebookPost">
                            <svg viewBox="0 0 12 12" preserveAspectRatio="xMidYMid meet">
                                <path class="svg-icon-path" d="M9.1,0.1V2H8C7.6,2,7.3,2.1,7.1,2.3C7,2.4,6.9,2.7,6.9,3v1.4H9L8.8,6.5H6.9V12H4.7V6.5H2.9V4.4h1.8V2.8 c0-0.9,0.3-1.6,0.7-2.1C6,0.2,6.6,0,7.5,0C8.2,0,8.7,0,9.1,0.1z"></path>
                            </svg>
                            <span>Share</span>
                        </a>
                        <a class="btn btn-sm btn-dark" asp-area="" asp-controller="Cart" asp-action="Cart">
                            <i class="bi bi-cart3" style="font-size:24px"></i>
                            <span class='badge badge-warning' id='lblCartCount'> 5 </span>
                        </a>
                    </div>
                </div>
            </nav>
        <main class="container-fluid flex-fill" role="main">
            @RenderBody()
        </main>
        <footer class="text-white bg-dark d-flex justify-content-sm-between pl-3 pr-3">
            <div class="pt-2">
                &copy; 2021 - Project made by Adi Papismedov, Yuval Ben Amram, Eden Avretz & Tal Shemesh
            </div>
                <a class="btn btn-sm btn-dark" asp-area="" asp-controller="Admin" asp-action="Admins">
                    <i class="bi bi-person-circle" style="font-size:24px"></i>
                </a>
        </footer>
    </div>
</body>
</html>
