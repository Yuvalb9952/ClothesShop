<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/disc.png">
    <title>Clothes Shop</title>

    <!--Load CSS-->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="~/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/admin.css" />
        <link rel="stylesheet" href="~/css/site.css" />

    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/admin.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
</head>
<body class="bg-secondary">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="">
                <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                ClothesShop
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Orders">Orders</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Customers">Customers</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Categories">Categories</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Tags">Tags</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Branches">Branches</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Statistics">Statistics</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Products">Products</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Admins">Admins</a>
                    </li>
                </ul>
            </div>
            <li class="float-right d-flex">
                <a id="fb-share-button" class="m-2" asp-controller="Admin" asp-action="FacebookPost">
                    <svg viewBox="0 0 12 12" preserveAspectRatio="xMidYMid meet">
                        <path class="svg-icon-path" d="M9.1,0.1V2H8C7.6,2,7.3,2.1,7.1,2.3C7,2.4,6.9,2.7,6.9,3v1.4H9L8.8,6.5H6.9V12H4.7V6.5H2.9V4.4h1.8V2.8 c0-0.9,0.3-1.6,0.7-2.1C6,0.2,6.6,0,7.5,0C8.2,0,8.7,0,9.1,0.1z"></path>
                    </svg>
                    <span>Share</span>
                </a>
                <a class="nav-link btn-logout" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
            </li>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="admin-main">
            @RenderBody()
        </main>
    </div>

    <partial name="_CookieConsentPartial" />

    <div>
        <footer class="footer text-white bg-dark d-flex justify-content-sm-between pl-3 pr-3 admin-footer">
            <div class="pt-2">
                &copy; 2021 - Project made by Adi Papismedov, Yuval Ben Amram, Eden Avretz & Tal Shemesh
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/script.js"></script>
        <script src="~/js/facebookService.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/script.js"></script>
        <script src="~/js/facebookService.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
