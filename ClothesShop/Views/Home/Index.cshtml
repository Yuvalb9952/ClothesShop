<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide" src="~/images/carousel/image1.jpg" alt="First slide">
            <div class="container">
                <div class="carousel-caption text-left">
                    <h1>Welcome</h1>
                    <p>Welcome to our clothes shop. Start shopping now!</p>
                    <p><a class="btn btn-lg btn-primary" role="button" asp-area="" asp-controller="Home" asp-action="Shop">Shop now</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="second-slide" src="~/images/carousel/image2.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>New Arrivals</h1>
                    <p>Check out our new collection!</p>
                    <p><a class="btn btn-lg btn-primary" role="button" asp-area="" asp-controller="Home" asp-action="Shop">Shop now</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide" src="~/images/carousel/image3.jpg" alt="Third slide">
            <div class="container">
                <div class="carousel-caption text-right">
                    <h1>See what's hot and trending!</h1>
                    <p><a class="btn btn-lg btn-primary" role="button" asp-area="" asp-controller="Home" asp-action="Shop">Shop now</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container marketing">

    <div class="row d-flex justify-content-center">
        <div class="col-lg-4">
            <img class="rounded-circle" src="~/images/home-cards/Men.png" alt="Generic placeholder image" width="140" height="140">
            <h2 class="card-title text-light">Men</h2>
            <p>
            </p>
            <p><a class="btn btn-lg btn-secondary" id="men-shop">View all &raquo;</a></p>
        </div>
        <div class="col-lg-4">
            <img class="rounded-circle" src="~/images/home-cards/Women.png" alt="Generic placeholder image" width="140" height="140">
            <h2 class="card-title text-light">Women</h2>
          
            <p><a class="btn btn-lg btn-secondary" role="button" id="women-shop">View all &raquo;</a></p>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#men-shop").on("click", function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Shop", "Home")',
                data: { gender: 1 },
                success: function (data) {
                    $("body").html(data);
                },
                error: function (data) {
                    console.log(data);
                }
            })
        })
    });

    $(document).ready(function () {
        $("#women-shop").on("click", function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Shop", "Home")',
                data: { gender: 2 },
                success: function (data) {
                    $("body").html(data);
                },
                error: function (data) {
                    console.log(data);
                }
            })
        })
    });

</script>